<!DOCTYPE html>
<html>
    <%- include('../../partials/header', {title: 'Nature Reach - Instructions'}); %>

    <style>
        #instructionTable thead{
          padding-top: 12px;
          padding-bottom: 12px;
          text-align: left;
          font-style: normal;
          background-color: rgb(92, 184, 92);
          color: black;
        }
      </style>

<body>
    <% include ../../partials/navbar %>

        <div class="container-fluid">
            <br>
            <h1>Instructions</h1>
              <br>
              <a href="./instructions/create" class="btn-lg mb-2 btn-primary">+ Create Instruction</a> <a href="./instructions/export"class="btn-lg mb-2 btn-success">Export</a> 
            <br>
            <br>
         <table id="instructionTable" class="table table-bordered table-striped">

            <thead>
              <tr>
                <td>Comment</td>
                <td>Enabled</td>
                <td>Admin</td>
                <td>Actions</td>
            </tr>
            </thead>

            <% for(var i=0; i < data.length; i++) { %>
            <tr>
            <td><%=data[i].Comment%></td>
            <td><%=data[i].Enabled%></td>
            <td><%=data[i].Admin%></td>
                <td>
                    <a href="./instructions/update?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-pencil"></i></span></a> 
                  | <a href="./instructions/delete?_id=<%= data[i]._id %>"
                  onclick="return confirm('Are you sure you want to delete this?')"><span style="font-size: 20px;"><i class="fa fa-trash"></i></span></a>
                </td>
              </tr>
              <% } %>
          </table>
        </div>

 <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#instructionTable').DataTable({
        responsive: true,
        order: [[1, "desc"]]
      });
    });
  </script>

</body>


</html>
