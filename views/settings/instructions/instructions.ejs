<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Nature Reach - Instructions' }); %>

  <style>
    #instructionTable thead {
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: left;
      font-style: normal;
      background-color: rgb(92, 184, 92);
      color: black;
    }
  </style>

  <body>
    <% include ../../partials/navbar %>
      <br>
      <div class="container-fluid">

        <h1><%= title %></h1>

        <div class="my-3"><a href="./instructions/create" class="btn mb-2 btn-primary">+ Create Instruction</a> <a href="./instructions/export" class="btn mb-2 btn-success">Export</a></div>
        

<div class="table-responsive">
        <table id="instructionTable" class="table table-bordered table-striped" width="100%">
          <thead>
            <tr>
              <td>Comment</td>
              <td>Enabled</td>
              <td>Admin</td>
              <td>Actions</td>
            </tr>
          </thead>

          <% for(var i=0; i < data.length; i++) { %>
            <tr>
              <td>
                <%=data[i].Comment%>
              </td>
              <td>
                <%=data[i].Enabled%>
              </td>
              <td>
                <%=data[i].Admin%>
              </td>
              <td>
                <a href="./instructions/update?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i
                      class="fa fa-pencil"></i></span></a>
                | <a href="./instructions/delete?_id=<%= data[i]._id %>"
                  onclick="return confirm('Are you sure you want to delete this?')"><span style="font-size: 20px;"><i
                      class="fa fa-trash"></i></span></a>
              </td>
            </tr>
            <% } %>
        </table>
      </div>
      </div>

      <% include ../../partials/scripts %>

        <script type="text/javascript">
          $(document).ready(function () {
            $('#instructionTable').DataTable({
              responsive: true,
              order: [[1, "desc"]]
            });
          });
        </script>

  </body>


</html>