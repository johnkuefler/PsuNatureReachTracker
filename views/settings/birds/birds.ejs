<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Animals'}); %>

<body>
  <% include ../../partials/navbar %>
  <br>

  <div class="container">
    <h1>Animals</h1>

    <a href="./birds/create" class="btn mb-2 btn-primary">+ Create Animal</a> <a href="./birds/export"class="btn-lg mb-2 btn-success">Export</a>

    <table id="birdTable" class="table table-bordered table-striped">

      <thead>
        <tr>
          <td>Animal Image</td>
          <td>Species</td>
          <td>Nickname</td>
          <td>Enabled</td>
          <td>Action</td>
        </tr>
      </thead>

      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td>
          <% if (data[i].animalImage.data == "") {%>
            <img style="width:200px;height:200px;" src="../images/defaultanimalpic.png">
            </>
            <% } else { %>
                <img style="width:200px;height:200px;" src="data:image/<%= data[i].animalImage.contentType%>;base64,
                <%= data[i].animalImage.data.toString('base64')%>">
            <% } %>
        </td>
        <td><%=data[i].species%></td>
        <td><%=data[i].nickName%></td>
        <td><%=data[i].enabled%></td>
        <td><a href="./birds/update?_id=<%= data[i]._id %>">Update</a> | <a href="./birds/delete?_id=<%= data[i]._id %>"
          onclick="return confirm('Are you sure you want to delete this?')">Delete</a> |
          <a href="./birds/updateanimalimage?_id=<%= data[i]._id %>">Image</a>
        </td>
      </tr>
      <% } %>
    </table>
  </div>

  <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#birdTable').DataTable();
    });
  </script>
</body>

</html>