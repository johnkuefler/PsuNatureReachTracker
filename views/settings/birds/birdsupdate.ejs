<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Nature Reach - Update Animal' }); %>

    <body>
        <% include ../../partials/navbar %>
            <br>

            <div class="container">
                <form method="POST" action="/settings/birds/update">

                    <h1 class="ml-3">Update Animal</h1>
                    <p class="ml-3">Update an animal in the database</p>
                    <input type="hidden" name="id" value="<%= data._id %>" />


                    <div class="form-group col-md-4 col-sm-12">
                        <label>Species</label>
                        <input type="text" class="form-control" name="species"
                            value="<%= data.species %>">
                    </div>

                    <div class="form-group col-md-4 col-sm-12">
                        <label>Nickname</label>
                        <input type="text" class="form-control" name="nickname"
                            value="<%= data.nickName %>">
                    </div>

                    <div class="form-check col-md-4 col-sm-12 ml-3">
                        <% if (data.enabled) { %>
                            <input type="checkbox" class="form-check-input" id="enabled" name="enabled" checked>
                            <% } else { %>
                                <input type="checkbox" class="form-check-input" id="enabled" name="enabled">
                                <% } %>
                                    <label class="form-check-label">Enabled</label>
                    </div>
                    <br>

                    <div class="form-group col-md-4 col-sm-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>


                </form>
            </div>
            <% include ../../partials/scripts %>
    </body>

</html>