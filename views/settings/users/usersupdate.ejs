<!doctype html>
<html>
<%- include('../../partials/header', {title: 'Nature Reach - Update User'}); %>

<body>
    <% include ../../partials/navbar %>
    <div class="container">

        <br>
        <h1 class="ml-3"><%= title %></h1>
        <p class="ml-3">Update a user in the database</p>
     
        <form action="/settings/users/update" method="post">
            <input type="hidden" name="id" value="<%= data._id %>"/>
            
                <div class="form-group col-md-4 col-sm-12">
                    <label>Email</label>
                    <input required type="text" class="form-control" name="email" value="<%= data.email %>">
                </div>

                <div class="form-group col-md-4 col-sm-12">
                    <label>First Name</label>
                    <input required type="text" class="form-control" name="firstName" value="<%= data.firstName %>">
                </div>

                <div class="form-group col-md-4 col-sm-12">
                    <label>Last Name</label>
                    <input required type="text" class="form-control" name="lastName" value="<%= data.lastName %>">
                </div>

                <div class="form-group col-md-4 col-sm-12">
                    <label>Password - If you wish to change the password for this User/Admin, you must submit a value, otherwise leave it blank to keep the current password.</label>
                    <input type="password" class="form-control" name="password">
                </div>

                <div class="form-group col-md-4 col-sm-12">
                    <label>Role</label>
                    <br>
                    <select name = "role" id= "role" class="form-control">
                        <option><%= data.role %></option>
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                    </select>
                </div>

                <div class="form-check col-md-4 col-sm-12 ml-3">
                    <% if (data.Enabled) { %>
                        <input type="checkbox" class="form-check-input" id="Enabled" name="Enabled" checked />
                      <% } else { %>
                        <input type="checkbox" class="form-check-input" id="Enabled" name="Enabled" />
                      <% } %>
                    <label class="form-check-label">Enabled</label>
                </div>
                <br>

                <div class="form-group col-md-4 col-sm-12"> 
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
               
            </form>
        
        </div>
    </div>
    <% include ../../partials/scripts %>
</body>

</html>