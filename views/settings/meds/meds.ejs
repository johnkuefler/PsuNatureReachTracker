<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Nature Reach - Medications'}); %>
<style>
  #medsTable thead{
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    font-style: normal;
    background-color: rgb(92, 184, 92);
    color: black;
  }
</style>
<body>
  <% include ../../partials/navbar %>
  <br>

  <div class="container-fluid">
    <div class="container">
      <h1>Medications</h1>

      <a href="./meds/create" class="btn mb-2 btn-primary">+ Create Medication</a> <a href="./meds/export"class="btn-lg mb-2 btn-success">Export</a>

      <table id="medsTable" class="table table-bordered table-striped">

        <thead>
          <tr>
            <td>Medication Image</td>
            <td>Name</td>
            <td>Actions</td>
          </tr>
        </thead>

        <% for(var i=0; i < data.length; i++) { %>
        <tr>
          <td>
            <% if (data[i].medicationImage.data == "") {%>
              <img style="width:200px;height:200px;" src="../images/defaultmedicationpic.png">
              </>
              <% } else { %>
                  <img style="width:200px;height:200px;" src="data:image/<%= data[i].medicationImage.contentType%>;base64,
                  <%= data[i].medicationImage.data.toString('base64')%>">
              <% } %>
          </td>
          <td><%=data[i].name%></td>
          <td>
            <a href="./meds/update?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-pencil"></i></span></a>
           | <a href="./meds/updatemedicationimage?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-image"></i></span></a> | 
            <a  href="./meds/delete?_id=<%= data[i]._id %>" onclick="return confirm('Are you sure you want to delete this?')"><span style="font-size: 20px;"><i class="fa fa-trash"></i></span></a>
            
          </td>
        </tr>
        <% } %>
      </table>
    </div>

    <% include ../../partials/scripts %>

    <script type="text/javascript">
      $(document).ready(function () {
        $('#medsTable').DataTable();
      });
    </script>
</body>

</html>