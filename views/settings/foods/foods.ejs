<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Foods'}); %>

<body>
  <% include ../../partials/navbar %>
  <br>
  <div class="container">
    <h1>Foods</h1>

    <a href="./foods/create" class="btn mb-2 btn-primary">+ Create Food</a> <a href="./foods/export"class="btn-lg mb-2 btn-success">Export</a>

    <table id="foodTable" class="table table-bordered table-striped">

      <thead>
        <tr>
          <td>Name</td>
          <td>Action</td>
        </tr>
      </thead>

      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td><%=data[i].name%></td>

        <td>
          <a href="./foods/update?_id=<%= data[i]._id %>">Update</a>
          <a> | </a>
          <a  href="./foods/delete?_id=<%= data[i]._id %>" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </div>

  <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#foodTable').DataTable();
    });
  </script>
</body>

</html>