<!DOCTYPE html>
<html>
<%- include('../../partials/header', {title: 'Nature Reach - Foods'}); %>

<body>
  <% include ../../partials/navbar %>
  <br>
  <div class="container">
    <h1>Foods</h1>

    <a href="./foods/create" class="btn mb-2 btn-primary">+ Create Food</a> <a href="./foods/export"class="btn-lg mb-2 btn-success">Export</a>

    <table id="foodTable" class="table table-bordered table-striped">

      <thead>
        <tr>
          <td>Food Image</td>
          <td>Name</td>
          <td>Action</td>
        </tr>
      </thead>

      <% for(var i=0; i < data.length; i++) { %>
      <tr>
        <td>
          <% if (data[i].foodImage.data == "") {%>
            <img style="width:200px;height:200px;" src="../images/defaultfoodpic.png">
            </>
            <% } else { %>
                <img style="width:200px;height:200px;" src="data:image/<%= data[i].foodImage.contentType%>;base64,
                <%= data[i].foodImage.data.toString('base64')%>">
            <% } %>
        </td>
        <td><%=data[i].name%></td>
        <td>
          <a href="./foods/update?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-pencil"></i></span></a>
           |  <a href="./foods/updatefoodimage?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-image"></i></span></a> | 
          <a  href="./foods/delete?_id=<%= data[i]._id %>" onclick="return confirm('Are you sure you want to delete this?')"><span style="font-size: 20px;"><i class="fa fa-trash"></i></span></a>
         
        </td>
      </tr>
      <% } %>
    </table>
  </div>

  <% include ../../partials/scripts %>

  <script type="text/javascript">
    $(document).ready(function () {
      $('#foodTable').DataTable();
    });
  </script>
</body>

</html>