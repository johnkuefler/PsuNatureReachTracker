<!DOCTYPE html>
<html>
<%- include('../partials/header', {title: 'Nature Reach - Export Specific Feedings'}); %>

<body>
    <% include ../partials/navbar %>
    <div class="container">
        <br>
        <h1>Export Feedings</h1>
        <p>Export specific feedings by date</p>
        <div class="container-fluid" style="width: 18rem;">
            <form method ="GET" action="/feedings/specificexport" enctype="text/html">
                <div class="form-group" col-4>
                  <div class="well">
                    <label>Initial Date</label>
                    <input
                      type="datetime-local"
                      class="form-control"
                      id="initialDate"
                      name="initialDate"
                      max="2020-12-10T00:00"
                      required
                    />
                    </div>
                  </div>
                  <div class="form-group" col-4>
                    <label>End Date</label>
                    <input type="datetime-local" class="form-control" id="endDate" name="endDate" max="2020-12-10T00:00" required/>
                  </div>
                  <button
                    onclick="window.location.href='/feedings/specificexport';"
                    style="margin-top: 15px; margin-bottom: 30px"
                    class="btn btn-primary"
                  >
                    Export Feedings
                  </button>  
            </form>
        </div>
    </div>
    <% include ../partials/scripts %>

    <script type="text/javascript">
      $(document).ready(function () {
        var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth()+1;
        var yyyy = today.getFullYear();
        var hh = today.getHours();
        var minutes = today.getMinutes();

        if (dd<10) {
            dd= '0' + dd
        }

        if (mm<10) {
            mm = '0' + mm
        }

        if (hh < 10) {
            hh = '0' + hh
        }

        if (minutes < 10) {
            minutes = '0' + minutes
        }

        today = yyyy + '-' + mm + '-' + dd + 'T' + hh + ':' + minutes;
        document.getElementById("initialDate").setAttribute("max", today);
      });
      </script>

