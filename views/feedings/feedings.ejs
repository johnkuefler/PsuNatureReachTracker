<!DOCTYPE html>
<html>
  <%- include('../partials/header', {title: 'Feedings'}); %>
  <body>
    <% include ../partials/navbar %>
    
    <div class="container-fluid">
        <br>
        <h1><%= title %>
          <br>
          <a href="./feedings/create" class="btn-lg mb-2 btn-primary">+ Add Feeding</a> <% if (locals.user.role === "Admin") { %> <a href="./feedings/export"class="btn-lg mb-2 btn-success">Export</a> <% } %>
        </h1>
        <br>
    <table id="feedingsTable" class="table table-bordered table-striped" data-role="table" data-mode="columntoggle">
        <thead class="thead-dark">
          <tr>
            <td>Date</td>
            <td>Animal</td>
            <td>Food</td>
            <td>Amount Fed</td>
            <td>Leftover Food</td>
            <td>Medicine</td>
            <td>Goal Weight</td>
            <td>Actual Weight</td>
            <td>Weather Conditions</td>
            <td>Feeder</td>
            <td>Comments</td>
            <td>Action</td>

        </tr>
        </thead>
        <% for(var i=0; i < data.length; i++) { %>
        <tr>
        <td><%=data[i].Date.toLocaleDateString("en-US", { hour: '2-digit', minute: '2-digit'}) %></td>
        <td><%=data[i].Bird%></td>
        <td><%=data[i].Food%></td>
        <td><%=data[i].AmountFed%></td>
        <td><%=data[i].LeftoverFood%></td>
        <td><%=data[i].Medicine%></td>
        <td><%=data[i].GoalWeight%></td>
        <td><%=data[i].ActualWeight%></td>
        <td><%=data[i].WeatherConditions%></td>
        <td><%=data[i].Feeder%></td>
        <td><%=data[i].Comments%></td>
            <td><a href="./feedings/update?_id=<%= data[i]._id %>"><span style="font-size: 20px;"><i class="fa fa-pencil"></i></span></a> 
              | <a href="./feedings/delete?_id=<%= data[i]._id %>"
              onclick="return confirm('Are you sure you want to delete this?')"><span style="font-size: 20px;"><i class="fa fa-trash"></i></span></a>
            </td>
              
          </tr>
          <% } %>

      </table>
    </div>

    <% include ../partials/scripts %>

    <script type="text/javascript">
    $(document).ready( function () {
        $('#feedingsTable').DataTable({
          responsive: true,
          order: [[0, "desc"]]
        });
    });
    </script>
  </body>
</html>