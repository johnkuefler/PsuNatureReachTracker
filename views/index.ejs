<!DOCTYPE html>
<html>
<%- include('./partials/header', {title: 'Nature Reach - Home Page' }); %>
  <style>
    .backgroundOwlPicture {
      background-image: url('../public/images/owl2.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      background-position: 50%0%;
      position: relative;
      width: 100vw;
      min-height: 100vh;
    }

    .col {
      display: flex;
      flex-wrap: wrap;
    }

    #welcome {
      text-shadow: 2px 2px #000000;
    }

    #quickmenu {
      text-shadow: 2px 2px #000000;
    }
  </style>

  <body>
    <% include ./partials/navbar %>

      <div class="backgroundOwlPicture">

        <% for(var i=0; i < data.length; i++) { %>
          <% if (data[i].Enabled) { %>
            <div class="alert alert-warning rounded-pill" role="alert">
              <%=data[i].Comment%>
                <a class="close" data-dismiss="alert" href="#">&times;</a>
            </div>
            <% } %>
              <% } %>


                <div class="container">
                  <br>
                  <div class="container">
                    <div class="ml-4">
                      <h1 style="color:white" id="welcome">Welcome!</h1>
                      <br>
                      <h5 style="color:white" id="quickmenu">Quick Menu:</h5>
                    </div>
                    <div class="col mb-4">
                      <div class="col mb-4">
                        <div class="card h-100" style="width: 100%">
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Recent Feedings</h5>
                            <p class="card-text">View details about recent feedings.</p>
                            <a href="./feedings" class="btn mt-auto btn-primary">View</a>
                          </div>
                        </div>
                      </div>

                      <div class="col mb-4">
                        <div class="card h-100" style="width: 100%">
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Create New Feeding</h5>
                            <p class="card-text">Record a new feeding in the database.</p>
                            <a href="./feedings/create" class="btn mt-auto btn-primary">Create</a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
      </div>
      <% include ./partials/scripts %>
  </body>

</html>