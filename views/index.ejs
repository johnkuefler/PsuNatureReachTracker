<!DOCTYPE html>
<html>
<%- include('./partials/header', {title: 'Nature Reach - Home Page' }); %>
  <style>
    .backgroundOwlPicture {
      background-image: url('../public/images/owl2.jpg');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      background-position: 50%0%;
      position: relative;
      width: 100vw;
      min-height: 100vh;
    }

    /* html {
      background: url('../public/images/owl2.jpg') no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
    } */

    .card {
      opacity: 0.7;
    }

    .card:hover {
      opacity: 1.0;
    }

    .col {
      display: flex;
      flex-wrap: wrap;
    }
  </style>

  <body>
    <% include ./partials/navbar %>

      <div class="backgroundOwlPicture">

        <% for(var i=0; i < data.length; i++) { %>
          <% if (data[i].Enabled) { %>
            <div class="alert alert-warning rounded-pill" role="alert">
              <%=data[i].Comment%>
                <a class="close" data-dismiss="alert" href="#">&times;</a>
            </div>
            <% } %>
              <% } %>


                <div class="container-fluid">
                  <br>

                  <div class="container">
                    <h1 style="color:darkslategray">Welcome!</h1>
                    <br>
                    <h5 style="color:darkslategray">Quick Menu:</h5>


                    <div class="col mb-4">
                      <div class="col mb-4">
                        <div class="card h-100" style="width: 100%">
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Recent Feedings</h5>
                            <p class="card-text">View details about recent feedings.</p>
                            <a href="./feedings" class="btn mt-auto btn-primary">View</a>
                          </div>
                        </div>
                      </div>

                      <div class="col mb-4">
                        <div class="card h-100" style="width: 100%">
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Add New Feeding</h5>
                            <p class="card-text">Record a new feeding in the database.</p>
                            <a href="./feedings/create" class="btn mt-auto btn-primary">Add</a>
                          </div>
                        </div>
                      </div>


                    </div>
                  </div>
                </div>
      </div>
      <% include ./partials/scripts %>
  </body>

</html>